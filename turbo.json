{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "build/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": []
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "lint:fix": {
      "dependsOn": []
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "knip": {
      "dependsOn": []
    },
    "format": {
      "dependsOn": []
    },
    "format:check": {
      "dependsOn": []
    }
  }
}
